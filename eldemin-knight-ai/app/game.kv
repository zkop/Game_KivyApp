<MainView>:
    box_name: box
    grid_name: grid
    label_update: move_num
    spacing: 5
    GridLayout:
        spacing:2
        id: grid
        cols:7
        rows:7
    StackLayout:

        spacing:10
        id: box
        orientation: "tb-lr"
        size_hint: 0.1, 1

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.2, 1
        spacing: 200
        BoxLayout
            Label: 
                text: "Score"
            Label:
                id: move_num

        BoxLayout:
            orientation:"vertical"
            Button:
                font_size: 30
                text: "Move"
                on_press: root.make_move()
                background_color: (1.0, 0.0, 0.0, 1.0)
                background_normal: ''

            Button:
                font_size: 30
                text: "Reset"
                on_press: root.make_reset()
                background_color: (0.0, 1.0, 0.0, 1.0)
                background_normal: ''

            Button:
                font_size: 30
                text: "Start"
                on_press: root.make_start()
                background_color: (1.0, 1.0, 0.0, 0.1)
                background_normal: ''

            Button:
                font_size: 30
                text: "Pause"
                on_press: root.make_pause()
                background_color: (0, 0, 1, 0.3)
                background_normal: ''
    

